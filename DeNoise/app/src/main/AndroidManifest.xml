<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tarapogancev.denoise">

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".service.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleInstance"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeNoiseCalmingWhiteNoise"
        tools:targetApi="31">
        <activity
            android:name=".TimerDialog"
            android:exported="false" />
        <activity
            android:name=".Settings"
            android:exported="false" />
        <activity
            android:name=".Onboarding"
            android:exported="false" />
        <activity
            android:name=".BrownNoisePlayer"
            android:exported="false" />
        <activity
            android:name=".PinkNoisePlayer"
            android:exported="false" />
        <activity
            android:name=".WhiteNoisePlayer"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.MediaPlayerService"
            android:stopWithTask="true" />

        <receiver
            android:name=".service.NotificationReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="PREVIOUS" />
                <action android:name="PLAY" />
                <action android:name="PAUSE" />
                <action android:name="NEXT" />
                <action android:name="CLOSE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>