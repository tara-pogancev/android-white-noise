<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeNoiseCalmingWhiteNoise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blueDarker</item>
        <item name="colorOnPrimary">@color/lightGray</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorOnBackground">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/tealDarker</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/open_sans</item>
        <item name="fontWeight">100</item>
    </style>

    <style name="TitleFont" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/arima</item>
    </style>
</resources>