<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="main"
        android:title="Main Settings">

        <EditTextPreference
            android:key="userName"
            android:title="@string/pref_yourName"
            android:summary="@string/pref_nameSummary"
            android:defaultValue=""
            />

        <CheckBoxPreference
            android:key="darkMode"
            android:title="@string/pref_darkMode"
            android:defaultValue="false"
            android:summaryOn="@string/pref_darkModeOn"
            android:summaryOff="@string/pref_darkModeOff"
            />

        <ListPreference
            android:key="defaultSound"
            android:title="@string/pref_defaultSound"
            android:summary="@string/pref_defaultSoundSummary"
            android:dialogTitle="@string/pref_defaultSoundDialog"
            android:entries="@array/pref_defaultSound"
            android:entryValues="@array/pref_defaultSoundVal"
            android:defaultValue="White Noise"
            />

        <ListPreference
            android:key="language"
            android:title="@string/pref_language"
            android:summary="@string/pref_languageSummary"
            android:dialogTitle="@string/pref_languageDialog"
            android:entries="@array/pref_language"
            android:entryValues="@array/pref_languageVal"
            android:defaultValue="en"
            />

    </PreferenceCategory>

</PreferenceScreen>